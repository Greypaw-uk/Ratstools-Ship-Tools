<Page x:Class="Ship_Loadout.LoadoutEditor.DisplayLoadout"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="1500" d:DesignWidth="800"
      Title="DisplayLoadout">

    <Grid>
        <ScrollViewer>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="180"/>
                </Grid.ColumnDefinitions>

                <!-- Ship Stats -->
                <Grid Grid.Row="0" Grid.ColumnSpan="6" Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="180"/>
                    </Grid.ColumnDefinitions>

                    <!-- Name -->
                    <Border BorderBrush="Orange" BorderThickness="1" Grid.Column="0">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Chassis" Foreground="Orange"
                                       Grid.Row="0" Grid.Column="0"/>
                            <TextBlock Name="tb_ChassisName" Text="Chassis" Foreground="Orange" 
                                       Grid.Row="0" Grid.Column="1" Margin="0 0 10 10"/>

                            <TextBlock  Text="Name" Foreground="Orange"
                                        Grid.Row="1" Grid.Column="0"/>
                            <TextBox Name="tb_givenName" Text="Name" LostFocus="Tb_givenName_OnLostFocus"
                                     Grid.Row="1" Grid.Column="1" Margin="0 0 10 10"/>

                            <TextBlock Text="Faction" Foreground="Orange"
                                       Grid.Row="2" Grid.Column="0"/>
                            <TextBlock Name="tb_factionName" Text="Faction" Foreground="Orange" 
                                       Grid.Row="2" Grid.Column="1" Margin="0 0 10 10"/>
                        </Grid>
                    </Border>

                    <!-- Mass -->
                    <Border BorderBrush="Orange" BorderThickness="1" Grid.Column="2">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="30" />
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Current Mass" Foreground="Orange"
                                       Grid.Row="0" Grid.Column="0" />
                            <TextBlock Name="tb_currentMass" Text="0" Foreground="Orange"
                                       Grid.Row="0" Grid.Column="1"  />

                            <TextBlock Text="Max Mass" Foreground="Orange"
                                       Grid.Row="1" Grid.Column="0" />
                            <TextBox Name="tb_maxMass" Text="0" LostFocus="Tb_maxMass_OnLostFocus"
                                     Grid.Row="1" Grid.Column="1" Height="20"/>

                            <TextBlock Text="Remaining Mass" Foreground="Orange"
                                       Grid.Row="2" Grid.Column="0" />
                            <TextBlock Name="tb_remainingMass" Text="0" Foreground="Orange"
                                       LostFocus="Tb_maxMass_OnLostFocus"
                                       Grid.Row="2" Grid.Column="1" />
                        </Grid>
                    </Border>

                    <!-- Drain -->
                    <Border BorderBrush="Orange" BorderThickness="1" Grid.Column="4">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="30" />
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Generated" Foreground="Orange"
                                       Grid.Row="0" Grid.Column="0" />
                            <TextBlock Name="tb_currentGeneration" Text="0" Foreground="Orange"
                                       Grid.Row="0" Grid.Column="1" Margin="0 0 10 10" />

                            <TextBlock Text="Current Drain" Foreground="Orange"
                                       Grid.Row="1" Grid.Column="0" />
                            <TextBlock Name="tb_currentDrain" Text="0" Foreground="Orange"
                                       Grid.Row="1" Grid.Column="1" Margin="0 0 10 10" />

                            <!-- 
                            <TextBlock Text="Max Drain" Foreground="Orange"
                                       Grid.Row="2" Grid.Column="0" />
                            <TextBlock Name="tb_maxDrain" Text="0" Foreground="Orange"
                                       LostFocus="Tb_givenName_OnLostFocus"
                                       Grid.Row="2" Grid.Column="1" />
                            -->

                            <TextBlock Text="Remaining Drain" Foreground="Orange"
                                       Grid.Row="3" Grid.Column="0" />
                            <TextBlock Name="tb_remainingDrain" Text="0" Foreground="Orange"
                                       LostFocus="Tb_givenName_OnLostFocus"
                                       Grid.Row="3" Grid.Column="1" Margin="0 0 10 10" />
                        </Grid>
                    </Border>

                    <!-- Overloads -->
                    <Border BorderBrush="Orange" BorderThickness="1" Grid.Column="6">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="30" />
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Reactor" Foreground="Orange" Grid.Row="0" Grid.Column="0"/>
                            <ComboBox Name="cb_reactorOverload" Height="22" Margin="0 0 10 0"
                                      SelectionChanged="ReactorOverloadChanged" SelectedIndex="0"
                                      Grid.Row="0" Grid.Column="1" >
                                <ComboBoxItem>None</ComboBoxItem>
                                <ComboBoxItem>One</ComboBoxItem>
                                <ComboBoxItem>Two</ComboBoxItem>
                                <ComboBoxItem>Three</ComboBoxItem>
                                <ComboBoxItem>Four</ComboBoxItem>
                            </ComboBox>

                            <TextBlock Text="Engine" Foreground="Orange" Grid.Row="1" Grid.Column="0"/>
                            <ComboBox Name="cb_engineOverload" Height="22" Margin="0 0 10 0"
                                      SelectionChanged="EngineOverloadChanged" SelectedIndex="0"
                                      Grid.Row="1" Grid.Column="1" >
                                <ComboBoxItem>None</ComboBoxItem>
                                <ComboBoxItem>One</ComboBoxItem>
                                <ComboBoxItem>Two</ComboBoxItem>
                                <ComboBoxItem>Three</ComboBoxItem>
                                <ComboBoxItem>Four</ComboBoxItem>
                            </ComboBox>

                            <TextBlock Text="Weapon" Foreground="Orange" Grid.Row="2" Grid.Column="0"/>
                            <ComboBox Name="cb_weaponOverload" Height="22" Margin="0 0 10 0"
                                      SelectionChanged="WeaponOverloadChanged" SelectedIndex="0"
                                      Grid.Row="2" Grid.Column="1" >
                                <ComboBoxItem>None</ComboBoxItem>
                                <ComboBoxItem>One</ComboBoxItem>
                                <ComboBoxItem>Two</ComboBoxItem>
                                <ComboBoxItem>Three</ComboBoxItem>
                                <ComboBoxItem>Four</ComboBoxItem>
                            </ComboBox>

                            <TextBlock Text="Capacitor" Foreground="Orange" Grid.Row="3" Grid.Column="0"/>
                            <ComboBox Name="cb_capacitorOverload" Height="22" Margin="0 0 10 0"
                                      SelectionChanged="CapacitorOverloadChanged" SelectedIndex="0"
                                      Grid.Row="3" Grid.Column="1" >
                                <ComboBoxItem>None</ComboBoxItem>
                                <ComboBoxItem>One</ComboBoxItem>
                                <ComboBoxItem>Two</ComboBoxItem>
                                <ComboBoxItem>Three</ComboBoxItem>
                                <ComboBoxItem>Four</ComboBoxItem>
                            </ComboBox>
                        </Grid>
                    </Border>

                    <!-- Movement Stats -->
                    <Border BorderBrush="Orange" BorderThickness="1" Grid.Column="8">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="30" />
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Pitch" Foreground="Orange"
                                       Grid.Row="0" Grid.Column="0" />
                            <TextBlock Name="tb_shipPitch" Text="0" Foreground="Orange"
                                       Grid.Row="0" Grid.Column="1" />

                            <TextBlock Text="Yaw" Foreground="Orange"
                                       Grid.Row="1" Grid.Column="0" />
                            <TextBlock Name="tb_shipYaw" Text="0" Foreground="Orange"
                                       Grid.Row="1" Grid.Column="1" />

                            <TextBlock Text="Roll" Foreground="Orange"
                                   Grid.Row="2" Grid.Column="0" />
                            <TextBlock Name="tb_shipRoll" Text="0" Foreground="Orange"
                                   LostFocus="Tb_givenName_OnLostFocus"
                                   Grid.Row="2" Grid.Column="1" />

                            <TextBlock Text="Speed" Foreground="Orange"
                                       Grid.Row="3" Grid.Column="0" />
                            <TextBlock Name="tb_shipSpeed" Text="0" Foreground="Orange"
                                       LostFocus="Tb_givenName_OnLostFocus"
                                       Grid.Row="3" Grid.Column="1" />
                        </Grid>
                    </Border>
                </Grid>


                <!-- Separator -->
                <Grid Grid.ColumnSpan="6" Grid.Row="1">
                    <Separator Foreground="Orange" Margin="10"/>
                </Grid>


                <!-- Components -->

                <!-- Reactor -->
                <Border Grid.Row="2" Grid.Column="0" Margin="5,5,5,0" VerticalAlignment="Top" 
                        BorderBrush="Orange" BorderThickness="1" Height="200">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text = "Reactor" HorizontalAlignment="Center" Foreground="Orange"
                                   Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"/>
                        <ComboBox Name="cb_reactor"  Height="20"
                                  SelectionChanged="ReactorSelectionChanged" DisplayMemberPath="Name"
                                  Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" />

                        <TextBlock Text="Armour" Foreground="Orange"
                                   Grid.Row="2" Grid.Column="0"/>
                        <TextBlock Name="tb_reactorArmour" Foreground="Orange"
                                   Grid.Row="2" Grid.Column="1"/>

                        <TextBlock Text="Mass" Foreground="Orange"
                                   Grid.Row="3" Grid.Column="0"/>
                        <TextBlock Name="tb_reactorMass" Foreground="Orange"
                                   Grid.Row="3" Grid.Column="1"/>

                        <TextBlock Text="Generation" Foreground="Orange"
                                   Grid.Row="4" Grid.Column="0"/>
                        <TextBlock Name="tb_reactorGeneration" Foreground="Orange"
                                   Grid.Row="4" Grid.Column="1"/>
                    </Grid>
                </Border>

                <!-- Engine -->
                <Border Grid.Row="2" Grid.Column="1" Margin="5" VerticalAlignment="Top"
                        BorderBrush="Orange" BorderThickness="1" Height="200">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text = "Engine" HorizontalAlignment="Center" Foreground="Orange"
                               Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"/>
                        <ComboBox Name="cb_engine"  Height="20"
                              SelectionChanged="EngineSelectionChanged" DisplayMemberPath="Name"
                              Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"/>

                        <TextBlock Text="Armour" Foreground="Orange"
                               Grid.Row="2" Grid.Column="0"/>
                        <TextBlock Name="tb_engineArmour" Foreground="Orange"
                               Grid.Row="2" Grid.Column="1"/>

                        <TextBlock Text="Drain" Foreground="Orange"
                               Grid.Row="3" Grid.Column="0"/>
                        <TextBlock Name="tb_engineDrain" Foreground="Orange"
                               Grid.Row="3" Grid.Column="1"/>

                        <TextBlock Text="Mass" Foreground="Orange"
                               Grid.Row="4" Grid.Column="0"/>
                        <TextBlock Name="tb_engineMass" Foreground="Orange"
                               Grid.Row="4" Grid.Column="1"/>

                        <TextBlock Text="Pitch" Foreground="Orange"
                               Grid.Row="5" Grid.Column="0"/>
                        <TextBlock Name="tb_enginePitch" Foreground="Orange"
                               Grid.Row="5" Grid.Column="1"/>

                        <TextBlock Text="Yaw" Foreground="Orange"
                               Grid.Row="6" Grid.Column="0"/>
                        <TextBlock Name="tb_engineYaw" Foreground="Orange"
                               Grid.Row="6" Grid.Column="1"/>

                        <TextBlock Text="Roll" Foreground="Orange"
                               Grid.Row="7" Grid.Column="0"/>
                        <TextBlock Name="tb_engineRoll" Foreground="Orange"
                               Grid.Row="7" Grid.Column="1"/>

                        <TextBlock Text="Speed" Foreground="Orange"
                               Grid.Row="8" Grid.Column="0"/>
                        <TextBlock Name="tb_engineSpeed" Foreground="Orange"
                               Grid.Row="8" Grid.Column="1"/>
                    </Grid>
                </Border>

                <!-- Booster -->
                <Border Grid.Row="2" Grid.Column="2" Margin="5" VerticalAlignment="Top"
                        BorderBrush="Orange" BorderThickness="1" Height="200">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text = "Booster" HorizontalAlignment="Center" Foreground="Orange"
                               Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"/>
                        <ComboBox Name="cb_booster"  Height="20"
                              SelectionChanged="BoosterSelectionChanged" DisplayMemberPath="Name"
                              Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"/>

                        <TextBlock Text="Armour" Foreground="Orange"
                               Grid.Row="2" Grid.Column="0"/>
                        <TextBlock Name="tb_boosterArmour" Foreground="Orange"
                               Grid.Row="2" Grid.Column="1"/>

                        <TextBlock Text="Drain" Foreground="Orange"
                               Grid.Row="3" Grid.Column="0"/>
                        <TextBlock Name="tb_boosterDrain" Foreground="Orange"
                               Grid.Row="3" Grid.Column="1"/>

                        <TextBlock Text="Mass" Foreground="Orange"
                               Grid.Row="4" Grid.Column="0"/>
                        <TextBlock Name="tb_boosterMass" Foreground="Orange"
                               Grid.Row="4" Grid.Column="1"/>

                        <TextBlock Text="Energy" Foreground="Orange"
                               Grid.Row="5" Grid.Column="0"/>
                        <TextBlock Name="tb_boosterEnergy" Foreground="Orange"
                               Grid.Row="5" Grid.Column="1"/>

                        <TextBlock Text="Recharge" Foreground="Orange"
                               Grid.Row="6" Grid.Column="0"/>
                        <TextBlock Name="tb_boosterRecharge" Foreground="Orange"
                               Grid.Row="6" Grid.Column="1"/>

                        <TextBlock Text="Consumption" Foreground="Orange"
                               Grid.Row="7" Grid.Column="0"/>
                        <TextBlock Name="tb_boosterConsumption" Foreground="Orange"
                               Grid.Row="7" Grid.Column="1"/>

                        <TextBlock Text="Acceleration" Foreground="Orange"
                               Grid.Row="8" Grid.Column="0"/>
                        <TextBlock Name="tb_BoosterAcceleration" Foreground="Orange"
                               Grid.Row="8" Grid.Column="1"/>

                        <TextBlock Text="Speed" Foreground="Orange"
                               Grid.Row="9" Grid.Column="0"/>
                        <TextBlock Name="tb_BoosterSpeed" Foreground="Orange"
                               Grid.Row="9" Grid.Column="1"/>
                    </Grid>
                </Border>

                <!-- Shield -->
                <Border Grid.Row="2" Grid.Column="3" Margin="5" VerticalAlignment="Top"
                        BorderBrush="Orange" BorderThickness="1" Height="200">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text = "Shield" HorizontalAlignment="Center" Foreground="Orange"
                               Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"/>
                        <ComboBox Name="cb_shield"  Height="20"
                              SelectionChanged="ShieldSelectionChanged" DisplayMemberPath="Name"
                              Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"/>

                        <TextBlock Text="Armour" Foreground="Orange"
                               Grid.Row="2" Grid.Column="0"/>
                        <TextBlock Name="tb_shieldArmour" Foreground="Orange"
                               Grid.Row="2" Grid.Column="1"/>

                        <TextBlock Text="Drain" Foreground="Orange"
                               Grid.Row="3" Grid.Column="0"/>
                        <TextBlock Name="tb_shieldDrain" Foreground="Orange"
                               Grid.Row="3" Grid.Column="1"/>

                        <TextBlock Text="Mass" Foreground="Orange"
                               Grid.Row="4" Grid.Column="0"/>
                        <TextBlock Name="tb_shieldMass" Foreground="Orange"
                               Grid.Row="4" Grid.Column="1"/>

                        <TextBlock Text="Front HP" Foreground="Orange"
                               Grid.Row="5" Grid.Column="0"/>
                        <TextBlock Name="tb_shieldFront" Foreground="Orange"
                               Grid.Row="5" Grid.Column="1"/>

                        <TextBlock Text="Rear HP" Foreground="Orange"
                               Grid.Row="6" Grid.Column="0"/>
                        <TextBlock Name="tb_shieldRear" Foreground="Orange"
                               Grid.Row="6" Grid.Column="1"/>

                        <TextBlock Text="Recharge" Foreground="Orange"
                               Grid.Row="7" Grid.Column="0"/>
                        <TextBlock Name="tb_shieldRecharge" Foreground="Orange"
                               Grid.Row="7" Grid.Column="1"/>

                        <TextBlock Text="Adjust" Foreground="Orange"
                               Grid.Row="8" Grid.Column="0"/>
                        <TextBlock Name="tb_shieldAdjust" Foreground="Orange"
                               Grid.Row="8" Grid.Column="1"/>
                    </Grid>
                </Border>

                <!-- Front Armour -->
                <Border Grid.Row="2" Grid.Column="4" Margin="5" VerticalAlignment="Top"
                        BorderBrush="Orange" BorderThickness="1" Height="200">
                    <Grid Margin="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="20"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text = "Front Armour" HorizontalAlignment="Center" Foreground="Orange"
                                       Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"/>
                            <ComboBox Name="cb_armourFront"  Height="20"
                                      SelectionChanged="FrontArmourChanged" DisplayMemberPath="Name"
                                      Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"/>

                            <TextBlock Text="Armour" Foreground="Orange"
                                       Grid.Row="2" Grid.Column="0"/>
                            <TextBlock Name="tb_frontArmourArmour" Foreground="Orange"
                                       Grid.Row="2" Grid.Column="1"/>

                            <TextBlock Text="Mass" Foreground="Orange"
                                       Grid.Row="3" Grid.Column="0"/>
                            <TextBlock Name="tb_frontArmourMass" Foreground="Orange"
                                       Grid.Row="3" Grid.Column="1"/>
                        </Grid>


                    </Grid>
                </Border>

                <!-- Rear Armour -->
                <Border Grid.Row="2" Grid.Column="5" Margin="5" VerticalAlignment="Top"
                        BorderBrush="Orange" BorderThickness="1" Height="200">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text = "Rear Armour" HorizontalAlignment="Center" Foreground="Orange"
                                   Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"/>
                        <ComboBox Name="cb_armourRear"  Height="20"
                                  SelectionChanged="RearArmourChanged" DisplayMemberPath="Name"
                                  Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"/>

                        <TextBlock Text="Armour" Foreground="Orange"
                                   Grid.Row="2" Grid.Column="0"/>
                        <TextBlock Name="tb_rearArmourArmour" Foreground="Orange"
                                   Grid.Row="2" Grid.Column="1"/>

                        <TextBlock Text="Mass" Foreground="Orange"
                                   Grid.Row="3" Grid.Column="0"/>
                        <TextBlock Name="tb_rearArmourMass" Foreground="Orange"
                                   Grid.Row="3" Grid.Column="1"/>
                    </Grid>
                </Border>
                

                <!-- Droid Interface -->
                <Border Grid.Row="3" Grid.Column="0" Margin="5" VerticalAlignment="Top"
                        BorderBrush="Orange" BorderThickness="1" Height="220">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text = "Droid Interface" HorizontalAlignment="Center" Foreground="Orange"
                               Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"/>
                        <ComboBox Name="cb_droidInterface"  Height="20"
                              SelectionChanged="DISelectionChanged" DisplayMemberPath="Name"
                              Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"/>

                        <TextBlock Text="Armour" Foreground="Orange"
                               Grid.Row="2" Grid.Column="0"/>
                        <TextBlock Name="tb_diArmour" Foreground="Orange"
                               Grid.Row="2" Grid.Column="1"/>

                        <TextBlock Text="Drain" Foreground="Orange"
                               Grid.Row="3" Grid.Column="0"/>
                        <TextBlock Name="tb_diDrain" Foreground="Orange"
                               Grid.Row="3" Grid.Column="1"/>

                        <TextBlock Text="Mass" Foreground="Orange"
                               Grid.Row="4" Grid.Column="0"/>
                        <TextBlock Name="tb_diMass" Foreground="Orange"
                               Grid.Row="4" Grid.Column="1"/>

                        <TextBlock Text="Speed" Foreground="Orange"
                               Grid.Row="5" Grid.Column="0"/>
                        <TextBlock Name="tb_diSpeed" Foreground="Orange"
                               Grid.Row="5" Grid.Column="1"/>
                    </Grid>
                </Border>

                <!-- Capacitor -->
                <Border Grid.Row="3" Grid.Column="1" Margin="5" VerticalAlignment="Top"
                        BorderBrush="Orange" BorderThickness="1" Height="220">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text = "Capacitor" HorizontalAlignment="Center" Foreground="Orange"
                               Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"/>
                        <ComboBox Name="cb_capacitor"  Height="20"
                              SelectionChanged="CapacitorSelectionChanged" DisplayMemberPath="Name"
                              Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"/>

                        <TextBlock Text="Armour" Foreground="Orange"
                               Grid.Row="2" Grid.Column="0"/>
                        <TextBlock Name="tb_capArmour" Foreground="Orange"
                               Grid.Row="2" Grid.Column="1"/>

                        <TextBlock Text="Drain" Foreground="Orange"
                               Grid.Row="3" Grid.Column="0"/>
                        <TextBlock Name="tb_capDrain" Foreground="Orange"
                               Grid.Row="3" Grid.Column="1"/>

                        <TextBlock Text="Mass" Foreground="Orange"
                               Grid.Row="4" Grid.Column="0"/>
