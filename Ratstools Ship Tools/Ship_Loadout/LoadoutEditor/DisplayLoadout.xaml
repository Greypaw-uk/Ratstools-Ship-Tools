                    <TextBlock Text="Armour" Foreground="Orange"
                               Grid.Row="2" Grid.Column="0"/>
                    <TextBlock Name="tb_ordOneArmour" Foreground="Orange"
                               Grid.Row="2" Grid.Column="1"/>

                    <TextBlock Text="Drain" Foreground="Orange"
