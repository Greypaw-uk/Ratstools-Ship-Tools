                <!-- Ordinance One -->
                <Grid Name="gd_ordOne" Grid.Row="4" Grid.Column="2" Margin="5" VerticalAlignment="Top">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="20"/>
