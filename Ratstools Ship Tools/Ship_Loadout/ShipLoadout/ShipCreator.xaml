<Page x:Class="Ship_Loadout.ShipLoadout.ShipCreator"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ShipCreator">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="150"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

            <Button Name="btn_add" Height="24" Width="100" Content="Add New" Click="Btn_add_OnClick" Margin="10" HorizontalAlignment="Left"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="btn_save" Content="Save" Height="24" Width="100" Click="Btn_save_OnClick" Margin="0 0 10 0"/>
            </StackPanel>

            <DataGrid Name="dg_ships" AutoGenerateColumns="False" IsReadOnly="True" SelectionChanged="Dg_ships_OnSelectionChanged"
                      Grid.Row="1" Margin="10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding Path = Name}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

        <Grid Grid.Row="2" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Faction" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0"/>
            <ComboBox Name="cb_faction" Grid.Row="0" Grid.Column="1" Height="24" Width="200" 
                      VerticalAlignment="Center" HorizontalAlignment="Left">
                <ComboBoxItem>Rebel</ComboBoxItem>
                <ComboBoxItem>Imperial</ComboBoxItem>
                <ComboBoxItem>Freelance</ComboBoxItem>
                <ComboBoxItem>Neutral</ComboBoxItem>
            </ComboBox>


            <!-- Name/Mass -->
            <TextBlock Text="Name" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0"/>
            <TextBox Name="tb_name" VerticalAlignment="Center" Width="200" HorizontalAlignment="Left" Grid.Row="1" Grid.Column="1"/>

            <TextBlock Text="Max Mass" VerticalAlignment="Center" Grid.Row="1" Grid.Column="2"/>
            <TextBox Name="tb_mass" VerticalAlignment="Center" Width="200" HorizontalAlignment="Left" Grid.Row="1" Grid.Column="3"
                     PreviewTextInput="OnPreviewTextInput"/>


            <!-- Acceleration/Deceleration -->
            <TextBlock Text="Acceleration" VerticalAlignment="Center" Grid.Row="2" Grid.Column="0"/>
            <TextBox Name="tb_acceleration" VerticalAlignment="Center" Width="200" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="1"
                     PreviewTextInput="OnPreviewTextInput"/>

            <TextBlock Text="Deceleration" VerticalAlignment="Center" Grid.Row="2" Grid.Column="2"/>
            <TextBox Name="tb_deceleration" VerticalAlignment="Center" Width="200" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="3"
                     PreviewTextInput="OnPreviewTextInput"/>


            <!-- Yew/Pitch -->
            <TextBlock Text="Yaw Rate" VerticalAlignment="Center" Grid.Row="3" Grid.Column="0"/>
            <TextBox Name="tb_yaw" VerticalAlignment="Center" Width="200" HorizontalAlignment="Left" Grid.Row="3" Grid.Column="1"
                     PreviewTextInput="OnPreviewTextInput"/>

            <TextBlock Text="Pitch" VerticalAlignment="Center" Grid.Row="3" Grid.Column="2"/>
            <TextBox Name="tb_pitch" VerticalAlignment="Center" Width="200" HorizontalAlignment="Left" Grid.Row="3" Grid.Column="3"
                     PreviewTextInput="OnPreviewTextInput"/>


            <!-- Roll -->
            <TextBlock Text="Roll" VerticalAlignment="Center" Grid.Row="4" Grid.Column="0"/>
            <TextBox Name="tb_roll" VerticalAlignment="Center" Width="200" HorizontalAlignment="Left" Grid.Row="4" Grid.Column="1"
                     PreviewTextInput="OnPreviewTextInput" LostFocus="Tb_roll_OnLostFocus"
                     ToolTip="If the value is a decimal, enter is as a normal number.  e.g. 37.5 is entered as 375"/>


            <!-- Speed High/Low -->
            <TextBlock Text="Speed High" VerticalAlignment="Center" Grid.Row="5" Grid.Column="0"/>
            <TextBox Name="tb_speedHigh" VerticalAlignment="Center" Width="200" HorizontalAlignment="Left" Grid.Row="5" Grid.Column="1"
                     PreviewTextInput="OnPreviewTextInput" LostFocus="Tb_speedHigh_OnLostFocus"
                     ToolTip="This represents a decimal.  For 0.99 enter only 99"/>

            <TextBlock Text="Speed Low" VerticalAlignment="Center" Grid.Row="5" Grid.Column="2"/>
            <TextBox Name="tb_speedLow" VerticalAlignment="Center" Width="200" HorizontalAlignment="Left" Grid.Row="5" Grid.Column="3"
                     PreviewTextInput="OnPreviewTextInput" LostFocus="Tb_speedLow_OnLostFocus"
                     ToolTip="This represents a decimal.  For 0.99 enter only 99"/>


            <!-- Weapon/Turret Slots -->
            <TextBlock Text="Weapon Slots" VerticalAlignment="Center" Grid.Row="6" Grid.Column="0"/>
            <TextBox Name="tb_weapons" VerticalAlignment="Center" Width="200" HorizontalAlignment="Left" Grid.Row="6" Grid.Column="1"
                     PreviewTextInput="OnPreviewTextInput"/>

            <TextBlock Text="Turret Slots" VerticalAlignment="Center" Grid.Row="6" Grid.Column="2"/>
            <TextBox Name="tb_turrets" VerticalAlignment="Center" Width="200" HorizontalAlignment="Left" Grid.Row="6" Grid.Column="3"
                     PreviewTextInput="OnPreviewTextInput"/>


            <!-- Ordinance/Counter Measures -->
            <TextBlock Text="Ordinance Slots" VerticalAlignment="Center" Grid.Row="7" Grid.Column="0"/>
            <TextBox Name="tb_ordinance" VerticalAlignment="Center" Width="200" HorizontalAlignment="Left" Grid.Row="7" Grid.Column="1"
                     PreviewTextInput="OnPreviewTextInput"/>

            <TextBlock Text="Countermeasures" VerticalAlignment="Center" Grid.Row="7" Grid.Column="2"/>
            <TextBox Name="tb_counters" VerticalAlignment="Center" Width="200" HorizontalAlignment="Left" Grid.Row="7" Grid.Column="3"
                     PreviewTextInput="OnPreviewTextInput"/>
        </Grid>
    </Grid>
</Page>
